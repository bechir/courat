{% extends 'base.html.twig' %}

{% block title %}
	{{ 'login.title'|trans }}
{% endblock %}

{% block navbar %}{% endblock %}
{% block main %}
	<div class="error-content">
		<div class="container">
			<div class="row">
				<div class="col-md-12 ">
					<div class="error-text">
						<h1 class="error"></h1>
						<div>		
						{# For 500 #}
						<img src="{{ asset('img/500.svg') }}" width="40%" class="error-img"> </div>
						<h4>{{ 'error.500-title'|trans|raw }}</h4>
						<p>
							{{ 'error.500-description'|trans|raw }}
						</p>
						<a href="{{ path('index') }}" class="btn-return">{{ 'error.go-back'|trans|raw }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block diffusion %}{% endblock %}
{% block footer %}{% endblock %}
