    <section id="hero">
      <div class="container-fluid m-0">
        <div class="row d-flex align-items-center">
          <div class="col-lg-6 py-5 py-lg-0 order-2 order-lg-1 {{ locale() == 'fr' ? 'mr-auto' : 'ml-auto ar text-right' }}"
            data-aos="fade-right">
            <h2>
             {{ 'hero.about'|trans({'%app_name%': App.name|upper}) }}
            </h2>
            <a href="#class" class="btn-get-started scrollto">{{ 'hero.courses'|trans}}</a>
            <a href=""
              data-toggle="modal"
              data-target="#schedule"
