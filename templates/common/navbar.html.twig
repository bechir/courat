{% from "util/widgets.html.twig" import displayLocales %}

 <!-- ======= Header ======= -->
  <header id="header">
    <div class="container d-flex">
      <div class="logo mr-auto">
        <h1 class="text-light"><a href="{{ path('index') }}">{{ App.name }}<span></span></a></h1>
      </div>
      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li class="active"><a href="{{ path('index') }}">{{ 'app.index'|trans|upper }}</a></li>
          <li class="active"><a href="#" data-toggle="modal" data-target="#schedule">{{ 'class.planning'|trans|raw }}</a></li>
          <li><a href="{{ path('course_index', {name: '6af'}) }}">{{ 'class.6af'|trans|raw }}</a></li>
          <li><a href="{{ path('course_index', {name: '4as'}) }}">{{ 'class.4as'|trans|raw }}</a></li>
          <li class="drop-down"><a href="">{{ 'class.terminale'|trans|upper }}</a>
            <ul>
              <li><a href="{{ path('course_index', {name: 'terminaleC'}) }}">{{ 'class.terminaleC'|trans }}</a></li>
              <li><a href="{{ path('course_index', {name: 'terminaleD'}) }}">{{ 'class.terminaleD'|trans }}</a></li>
              <li><a href="{{ path('course_index', {name: 'terminaleLM'}) }}">{{ 'class.terminaleLM'|trans }}</a></li>
              <li><a href="{{ path('course_index', {name: 'terminaleLO'}) }}">{{ 'class.terminaleLO'|trans }}</a></li>
            </ul>
          </li>

          <!-- Language Changer -->
          {% for l in locales() %}
            {% if l.code != locale() %}
              <li class="get-started"><a class="get-started" href="{{ path(app.request.get('_route', 'index'), app.request.get('_route_params', [])|merge({_locale: l.code})) }}"><i class="fa fa-language"></i> {{ l.name|capitalize }}</a></li>
            {% endif %}
          {% endfor %}
        </ul>
      </nav><!-- .nav-menu -->
    </div>
  </header><!-- End Header -->